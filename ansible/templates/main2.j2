---

root_dir: {{ root_dir }}
version: {{ package_version }}
release: {{ package_release }}
branch: {{ branch }}
system: {{ system }}


{% if 'debian' in system or 'ubuntu' in system %}
repo:
  host: repo-box-ubuntu
format: deb
{% endif %}

{% if 'debian' in system and '7' in system %}
distro: debian
codename: wheezy
{% elif 'debian' in system and '8' in system %}
distro: debian
codename: jessie
{% elif 'ubuntu' in system and '12.04' in system %}
distro: ubuntu
codename: precise
{% elif 'ubuntu' in system and '14.04' in system %}
distro: ubuntu
codename: trusty
{% elif 'ubuntu' in system and '16.04' in system %}
distro: ubuntu
codename: xenial
{% elif 'redhat' in system and '6' in system %}
distro: rhel
codename: el6
{% elif 'redhat' in system and '7' in system %}
distro: rhel
codename: el7
{% endif %}

{% if system == 'debian-7-32' %}
distro: debian
codename: wheezy
arch: i386
box:
  base: bento/debian-7.9-i386
  name: debian7-32_zato
  memory: 512
  hostname: wheezy32_zato
{% elif system == 'debian-7-64' %}
distro: debian
codename: wheezy
arch: amd64
box:
  base: bento/debian-7.9
  name: debian7-64_zato
  memory: 512
  hostname: wheezy64_zato
{% elif system == 'debian-8-32' %}
