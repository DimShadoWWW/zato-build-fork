  memory: 512
  hostname: centos6-32_zato
{% elif system == 'redhat-6-64' %}
distro: rhel
codename: el6
arch: x86_64
box:
  base: bento/centos-6.7
  name: centos6-64_zato
  memory: 512
  hostname: centos6-64_zato
{% elif system == 'redhat-7-64' %}
distro: rhel
codename: el7
arch: x86_64
